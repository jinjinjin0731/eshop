.editbox {
  display: none;
  font-family: '-apple-system-font,Helvetica Neue,Helvetica,sans-serif';
  z-index: 10; }
  .editbox_content {
    position: absolute;
    bottom: 0;
    padding-bottom: 150rpx;
    width: 100%;
    background-color: #fff; }
  .editbox_header {
    position: relative;
    height: 180rpx; }
    .editbox_header_img {
      position: absolute;
      left: 40rpx;
      top: -60rpx;
      width: 200rpx;
      height: 200rpx;
      border: 2rpx solid #ddd; }
      .editbox_header_img .taro-img,
      .editbox_header_img image {
        width: 100%;
        height: 100%; }
    .editbox_header_text {
      position: absolute;
      top: 60rpx;
      left: 270rpx; }
      .editbox_header_text_price {
        font-family: 'toplifeCustomEn';
        font-size: 32rpx;
        color: #232321; }
      .editbox_header_text_desc {
