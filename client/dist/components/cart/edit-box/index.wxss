      position: absolute;
      right: 35rpx;
      top: 30rpx;
      display: inline-block;
      background-image: url("http://storage.jd.com/o2images/close_icon.png");
      background-size: 100% 100%;
      width: 40rpx;
      height: 40rpx; }
  .editbox_option {
    margin-bottom: 40rpx;
    padding: 0 40rpx;
    color: #232321; }
    .editbox_option_title {
      font-size: 28rpx; }
    .editbox_option_wp {
      margin-top: 20rpx; }
    .editbox_option_item {
      display: inline-block;
      margin-right: 34rpx;
      margin-bottom: 30rpx;
      padding: 30rpx 40rpx;
      font-size: 24rpx;
      text-align: center;
      border: 2rpx solid #ddd; }
      .editbox_option_item.on {
        color: #fff;
        background-color: #000; }
    .editbox_option.size .editbox_option_item {
      padding-left: 20rpx;
      padding-right: 20rpx;
      font-size: 32rpx;
      -webkit-box-sizing: border-box;
              box-sizing: border-box; }
  .editbox_btn {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    background-color: #222;
    text-align: center;
    font-size: 32rpx; }
  .editbox_offsale {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 76rpx;
    line-height: 76rpx;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.7);
    text-align: center;
    font-size: 32rpx; }

.bg_shade {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(35, 35, 33, 0.8);
  z-index: 999; }

.show {
  display: block !important; }

.show_wp {
  -webkit-animation: slide_in 0.3s ease-out forwards;
          animation: slide_in 0.3s ease-out forwards; }

.hide_wp {
  -webkit-animation: slide_out 0.3s ease-in forwards;
          animation: slide_out 0.3s ease-in forwards; }

.fade {
  -webkit-animation: fade_out 0.3s ease-in-out forwards;
          animation: fade_out 0.3s ease-in-out forwards; }
